<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body text-center">
          <h4>{{creatorName}}</h4>
          <img src="/images/person.png" class="img-thumbnail img-circle center-block"><br/>
        </div>
        <div class="panel-footer text-center">
          <a href="/publicprofile/{{creator}}" class="btn btn-link btn-sm">More from {{creatorName}}</a>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h2>{{heading}}</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <h4>January 31st 2018</h4>
          <p>{{text}}</p>
        </div>
      </div>
      <div class="panel panel-default" id="loginSuggestionDivToComment">
        <div class="panel-body">
          <h4>Comments</h4>
          <p>Please <a href="/login">login</a> to leave a comment</p>
        </div>
      </div>
      <div class="panel panel-default">
        <input class="form-control input-lg comment" id="{{storyId}}" type="text" placeholder="Write a comment">
      </div>
      <div id="oneStory">
        {{#each comments}}
          <div class="well">
            <p>{{comment}}
              <a href="/publicprofile/{{commentedBy_userId}}" class="btn btn-default btn-xs" style="border-radius:10px;"><span class="glyphicon glyphicon-user"></span> {{commentedBy_userName}}</a>
            </p>
            <small>{{commentedAt}}</small>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
