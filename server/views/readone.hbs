<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body text-center">
          <h4>Vivek mishra</h4>
          <img src="https://avatars0.githubusercontent.com/u/26858253?v=4" class="img-thumbnail img-circle center-block" width="100" height="100"><br/>
        </div>
        <div class="panel-footer text-center">
          <a href="/stories/{{creator}}" class="btn btn-link btn-sm">More from {{creatorName}}</a>
        </div>
      </div>
    </div>
    <div class="col-md-6" id="oneStory">
      <h2>{{heading}}</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <h4>January 31st 2018</h4>
          <p>{{text}}</p>
        </div>
      </div>
      <div class="panel panel-default" id="loginSuggestionDivToComment">
        <div class="panel-body">
          <h4>Comments</h4>
          <p>Please <a href="/login">login</a> to leave a comment</p>
        </div>
      </div>
      <div class="panel panel-default">
        <input class="form-control input-lg comment" id="{{storyId}}" type="text" placeholder="Write a comment">
      </div>
      {{#each comments}}
        <div class="well" >
          <p>{{comment}}
            <a href="getprofile/{{commentedBy_userId}}" class="btn btn-default btn-xs" style="border-radius:10px;"><span class="glyphicon glyphicon-user"></span> {{commentedBy_userName}}</a>
          </p>
          <small>{{commentedAt}}</small>
        </div>
      {{/each}}
    </div>
  </div>
</div>
